{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "github>dockhippie/.github//renovate/preset"
    ],
    "packageRules": [
        {
            "description": "Update tags without merge",
            "matchDatasources": [
                "github-releases"
            ],
            "matchUpdateTypes": [
                "major",
                "minor"
            ],
            "enabled": false,
            "automerge": false,
            "matchPackageNames": [
                "invoiceninja/invoiceninja"
            ]
        },
        {
            "description": "Update tags without merge",
            "matchDatasources": [
                "github-releases"
            ],
            "matchUpdateTypes": [
                "patch"
            ],
            "enabled": true,
            "automerge": true,
            "matchPackageNames": [
                "invoiceninja/invoiceninja"
            ]
        }
    ]
}
